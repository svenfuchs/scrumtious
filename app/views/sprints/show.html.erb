<div id="breadcrumbs">
  <%= link_to 'Overview', projects_path %> Â»
  <%= h "Sprint #{@sprint.name}" %>
</div>

<div id="action">
  <% if @sprint.start_at and @sprint.end_at %>
    <%=h "#{@sprint.start_at.strftime('%A, %e.%m.')} - #{@sprint.end_at.strftime('%A, %e.%m.')}" %>
  <% else %>
    not scheduled
  <% end %>
  &middot;
  <%= link_to 'edit', edit_sprint_path(@sprint) %>  &middot;
  <%= link_to 'destroy', @sprint, :confirm => 'Are you sure?', :method => :delete %>
</div>

<%= render :partial => "tickets", :locals => {:tracking => true } %>

<%= render :partial => "burndown/amchart", :locals => {:burndown => @sprint.burndown} if @sprint.start_at and @sprint.end_at %>
