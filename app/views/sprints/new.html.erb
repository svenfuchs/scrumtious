<p>
  <%= link_to 'Projects', projects_path %> »
  <%= link_to h(@project.name), @project %> »
  <%= link_to h(@release.name), @release %>
</p>

<h1>New sprint</h1>

<% form_for(@sprint) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :release_id %>
  <p>
    <%= f.label :remote_id, 'Lighthouse milestone id' %><br />
    <%= f.text_field :remote_id %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :start_at %><br />
    <%= f.date_select :start_at %>
  </p>
  <p>
    <%= f.label :end_at %><br />
    <%= f.date_select :end_at %>
  </p>
  <p>
    <%= f.submit "Create" %> or <%= link_to 'back', @sprint.release %>
  </p>
<% end %>


